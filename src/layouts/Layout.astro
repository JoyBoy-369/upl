---
import { SEO } from "astro-seo";
import { ViewTransitions } from "astro:transitions";
import Footer from "@components/footer.astro";
import  SpeedInsights  from "@vercel/speed-insights/astro"

import '@fontsource/k2d/400.css';
import '@fontsource/k2d/600.css';
import "@fontsource-variable/raleway"
import '@styles/global.css'

export interface Props {
    title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
    "/opengraph.jpg",
    Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
    ? title + " | " + "UPL"
    : "UPL - ";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">


        <meta name="generator" content={Astro.generator} />

        <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
        <SpeedInsights/>
        <SEO
        title={makeTitle}
        description="UPL"
        canonical={canonicalURL}
        twitter={{
            creator: "KwikShutterFilms",
            site: "",
            card: "summary_large_image",
        }}
        openGraph={{
            basic: {
                url: canonicalURL,
                type: "website",
                title: `UPL`,
                image: resolvedImageWithDomain,
            },
            image: {
                alt: "UPL Homepage Screenshot",
            },
        }}
    />
        <ViewTransitions />
    </head>
    <body class='bg-hint-of-red-50'> 
        <div class='px-4 pt-12 pb-8 lg:p-4'>
            <h1 class="text-center font-extrabold text-cobalt-800 leading-none md:text-5xl text-4xl lg:text-7xl">UTTARAKHAND PREMIER LEAGUE</h1>
            <div class="flex justify-around pt-4">
                <p class="font-extrabold lg:text-xl sm:px-16 lg:px-48 text-cobalt-800">INAUGRAL SEASON</p> 
                <p class="font-body font-normal lg:text-xl sm:px-16 lg:px-48 text-sea-green-700">September 11th 2024</p>  
            </div>
        </div>
        <!-- <Navbar /> -->
        <slot />
        <Footer />
        <style is:global>
        /* Improve Page speed */
        /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
        img {
            content-visibility: auto;
        }
        </style>
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    </body>
</html>
