
---
import {Image} from 'astro:assets'
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import heroImage from "@assets/hero.png";
---

<Layout title="Fixtures">
    <Container>
        <Sectionhead>
            <Fragment slot="title">Fixtures</Fragment>
        </Sectionhead>

        <div class="grid my-8 border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 md:mb-12 md:grid-cols-2 bg-white dark:bg-gray-800">
            <figure class="flex flex-col items-center justify-center p-8 text-center bg-white border-b border-gray-200 rounded-t-lg md:rounded-t-none md:rounded-ss-lg md:border-e dark:bg-gray-800 dark:border-gray-700">
                <blockquote class="max-w-2xl mx-auto mb-4 text-gray-500 lg:mb-8 dark:text-gray-400">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Match 1</h3>
                    <p class="my-4">28 NOVEMBER, TUESDAY, 18:00 IST</p>
                </blockquote>
                <figcaption class="flex items-center justify-center gap-8">
                    <div>
                        <Image class="rounded-full w-20 h-20" src={heroImage} alt=''/>                  
                        <p>Team Liquid</p>
                    </div>
                    <div class="space-y-0.5 font-medium dark:text-white text-left rtl:text-right ms-3">
                        <div> V/S</div>
                    </div>
                    <div>
                        <Image class="rounded-full w-20 h-20" src={heroImage} alt=''/>                  
